<Window x:Class="W03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W03"
        mc:Ignorable="d"
        Icon="HSR-Icon.ico"
        
        ResizeMode="CanResizeWithGrip"
        Title="Rich Text Pad" Height="480" Width="600">
    <DockPanel>

        <RichTextBox Name="EditorBox">
            <FlowDocument>
                <Paragraph FontSize="24" FontWeight="Bold">Quote of the day:</Paragraph>
                <Paragraph>The
                    <Italic>quick</Italic>
                    <Run Foreground="Brown">brown</Run> fox jumps over the
                    <Italic>lazy</Italic> dog
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </DockPanel>
</Window>
